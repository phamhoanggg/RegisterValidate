<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:background="#DCD6D6"
        android:hint="First name"
        android:id="@+id/edtFirstname"
        android:layout_width="155dp"
        android:layout_height="38dp"
        android:layout_below="@id/textView6"
        android:layout_alignStart="@id/textView6"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:layout_alignTop="@id/textView6"
        android:layout_toEndOf="@id/edtFirstname"
        android:layout_marginStart="16dp" />

    <EditText
        android:background="#DCD6D6"
        android:hint="Last name"
        android:id="@+id/edtLastname"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_below="@id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_below="@id/edtFirstname" />

    <RadioGroup
        android:id="@+id/radioGroup_diffLevel"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_below="@id/edtLastname"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rdFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textView2" />

    <EditText
        android:id="@+id/edtBirthday"
        android:layout_width="213dp"
        android:layout_height="39dp"
        android:background="#DCD6D6"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="textPersonName"
        android:layout_below="@id/textView3"
        android:layout_alignStart="@id/textView3"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="@android:color/black"
        android:layout_below="@id/radioGroup_diffLevel"
        android:layout_alignBaseline="@id/edtBirthday"
        android:layout_toEndOf="@id/edtBirthday"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_below="@id/edtBirthday" />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="322dp"
        android:layout_height="42dp"
        android:background="#DCD6D6"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@id/textView4"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginStart="16dp"
        android:layout_below="@id/edtAddress" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:background="#DCD6D6"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_below="@id/textView5"
        android:layout_alignStart="@id/textView5"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/cbTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to Terms of Use"
        android:layout_below="@id/edtEmail"
        android:layout_alignStart="@id/textView5"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cbTerm"
        android:layout_marginTop="16dp" />

</RelativeLayout>
